{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Electricity Consumption (billion kWh)",
  "width": 1000,
  "height": 600,
  "projection": {"type": "equalEarth", "scale": {"expr": "zoom_level"}, "translate": {"signal": "translateXY"}},
  "params": [
    {
      "name": "Year",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1980,
        "max": 2020,
        "step": 1,
        "name": "Year Select: "
      }
    },
    {
      "name": "zoom_level",
      "value": 120,
      "bind": {
        "input": "range",
        "min": 120,
        "max": 2000,
        "step": 5,
        "name": "Zoom: "
      }
    },
    {
      "name": "translateXY",
      "value": [350, 150],
      "update": "[clamp(translatePrevXY[0] + mouseChangeXY[0], -300, 1200), clamp(translatePrevXY[1] + mouseChangeXY[1], -200, 800)]"
    },
    {
      "name": "translatePrevXY",
      "value": [350, 150],
      "on": [
        {"events": [{"type": "mousedown"}], "update": "translateXY"}
      ]
    },
    {
      "name": "mouseStartXY",
      "value": [350, 150],
      "on": [{"events": [{"type": "mousedown"}], "update": "xy()"}]
    },
    {
      "name": "signal_mouse_drag_xy",
      "value": [350, 150],
      "on": [
        {
          "events": [
            {
              "type": "mousemove",
              "between": [{"type": "mousedown"}, {"type": "mouseup"}]
            }
          ],
          "update": "xy()"
        }
      ]
    },
    {
      "name": "mouseChangeXY",
      "value": [0, 0],
      "update": "[signal_mouse_drag_xy[0] - mouseStartXY[0], signal_mouse_drag_xy[1] - mouseStartXY[1]]"
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/js/mapshaper.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_20"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "clear",
        "fillOpacity": 0,
        "stroke": "grey",
        "strokeWidth": 0.7,
        "strokeOpacity": 0.7
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/js/mapshaper.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME + ' for the year ' + Year",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": [{"field": "note"}]}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/data/Global%20Electricity%20Statistics%20Norm.csv",
        "name": "CSV"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/js/mapshaper.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": {"field": "Features", "equal": "net consumption"}},
        {"calculate": "datum[Year] * 100", "as": "norm_vals"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "norm_vals",
          "type": "quantitative",
          "scale": {"type": "linear", "domain": [0, 50], "scheme": "plasma"},
          "title": "Energy Consumption (% of global)"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "norm_vals",
            "type": "quantitative",
            "title": "Percentage of Global Consumption",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}