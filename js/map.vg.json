{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Murder Arrests USA 1977 per 100k Population",
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/js/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/data/Global%20Electricity%20Statistics.csv"
            },
            "key": "Country",
            "fields": [
              "2020"
            ]
          }
        },
        {
          "calculate": "datum['2020']",
          "as": "cons"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "geoshape"
          },
          "encoding": {
            "color": {
              "field": "cons",
              "type": "quantitative",
              "scale": {
                "type": "linear",
                "scheme": "plasma",
                "domain": [0, 20]
              },
              "title": "Electricity Consumption YYYY"
            },
            "tooltip": [
              {
                "field": "properties.name",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "cons",
                "type": "quantitative",
                "title": "Consumption (W) YYYY"
              }
            ]
          }
        }
      ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/js/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_10"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "clear",
        "fillOpacity": 0,
        "stroke": "black",
        "strokeOpacity": 0.3
      }
    }
  ]
}
