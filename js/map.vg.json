{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Electricity Consumption (billion kWh)",
  "width": 600,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "Year",
      "value": 2020,
      "bind": {"input": "range", "min": 2000, "max": 2020, "step": 1}
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/js/mapshaper.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME + ' for the year ' + Year",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
     {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/js/mapshaper.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_20"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "clear",
        "fillOpacity": 1,
        "stroke": "grey",
        "strokeWidth": 0.7,
        "strokeOpacity": 0.7
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/data/Global%20Electricity%20Statistics%20Norm.csv",
        "name": "CSV"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/CallumR2/3179_Homework_week10/main/js/mapshaper.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": {"field": "Features", "equal": "net consumption"}},
        {"calculate": "datum[Year] * 100", "as": "norm_vals"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
    "shape": {"field": "geo", "type": "geojson"},
    "color": {
        "field": "norm_vals",
        "type": "quantitative",
        "scale": {
            "type": "linear",
            "domain": [0, 50],
            "scheme": "plasma"
        }
    },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "norm_vals",
            "type": "quantitative",
            "title": "Percentage of Global Consumption",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}