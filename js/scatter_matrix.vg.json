              {"field": "Year", "type": "nominal", "title": "Year"},
              {
                "field": "cons_per_capita_kWh_person",
                "type": "quantitative",
                "title": "Consumption per capita (kWh per person)",
                "format": ".2f"
              },
              {
                "field": "percent_renewable",
